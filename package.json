{
  "name": "auto-mart",
  "version": "1.0.0",
  "description": "Auto Mart is an online marketplace for automobiles of diverse makes, model or body type. With Auto Mart, users can sell their cars or buy from trusted dealerships or private sellers.",
  "main": "server.js",
  "scripts": {
    "dev-start": "npm run start",
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && npm run babel-build",
    "db-migrations": "babel-node ./src/db/dbSetup.js",
    "coverage": "nyc npm run test && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage",
    "test": "mocha --require @babel/register --exit",
    "start": "nodemon --exec babel-node src/app.js",
    "babel-build": "babel src --out-dir dist",
    "serve": "node dist/app.js",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dolapo47/Auto-Mart.git"
  },
  "author": "Adeleye Adedolapo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Dolapo47/Auto-Mart/issues"
  },
  "homepage": "https://github.com/Dolapo47/Auto-Mart#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "chai-http": "^4.3.0",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "should": "^13.2.3",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "cloudinary": "^1.14.0",
    "@babel/polyfill": "^7.4.4",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "express-fileupload": "^1.1.5",
    "express-validator": "^5.3.1",
    "faker": "^4.1.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "pg": "^7.11.0",
    "trim-request": "^1.0.6",
    "trim-request-body": "^1.0.1",
    "validator": "^10.11.0"
  }
}
